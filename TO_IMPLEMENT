STDERR.reopen "log/app.log"
class Harbor::Logger
  def initialize(app)
    @app = app
  end

  def call(env)
    if Harbor::Request.new(env).environment == "development"
      STDOUT.reopen STDERR
    else
      STDOUT.reopen "/dev/null"
    end
    @app.call(env)
  end
end

class Harbor::ExceptionHandler < Rack::ShowExceptions
  def initialize(app)
    @app = app
  end

  def call(env)
    @app.call(env)
  rescue StandardError, LoadError, SyntaxError => e
    if Harbor::Request.new(env).environment == "development"
      [500, {"Content-Type" => "text/html"}, pretty(env, e)]
    else
      Harbor::Response.new.render "errors/server_error"
    end
  end
end

use Harbor::Logger
use Harbor::ExceptionHandler
run MyApp.new